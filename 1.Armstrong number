#include <stdio.h>
#include <math.h>
int main()
{
    int n, sum = 0, temp, r;
    printf("Enter n:");
    scanf("%d", &n);
    if (n==0)
    {
        printf("this is armstrong number:");
        return 0;
    }
    temp = n;
    int count = (int)(log10(n)) + 1;
    while (temp > 0)
    {
        r = temp % 10;
        sum += (int)pow(r, count);
        temp /= 10;
    }
    if (sum == n)
    {
        printf("This is armstrong number: %d", n);
    }
    else
        printf("This is not armstrong number");
    return 0;
}
