#include<stdio.h>
int main(){
    int num,sum=0;
    printf("Enter num:");
    scanf("%d", &num);
    for (int i = 1; i <= num/2; i++)
    {
        if (num%i==0)
        {
            sum+=i;
        }
    }
    if (sum==num)
    {
        printf("This is perfect number: %d", num);
    }
    else{
        printf("This isn't perfect number: %d", num);
    }
    return 0;
}
